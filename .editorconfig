# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true

[*.{py,rst,ini}]
indent_style = tab
indent_size = 4

[*.py]
line_length=120
multi_line_output=3
default_section=THIRDPARTY

[*.{html,css,scss,json,yml}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
